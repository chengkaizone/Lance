<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="80dip"
	android:focusable="true"
	android:focusableInTouchMode="true"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout android:gravity="bottom" 
		android:id="@+id/ck_ptop_menu_tablayout"
		android:paddingTop="2.0dip" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TableRow android:gravity="center_vertical" android:id="@+id/ck_pmenu_tabrow_1"
			android:background="@color/ck_menu_layout_color"
			android:layout_width="fill_parent" android:layout_height="65.0dip">
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/ck_pmenu_home"
				android:background="@drawable/ck_menu_item_bg"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:src="@drawable/ck_menu_user" />
				<TextView android:textColor="@color/ck_black"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="用户信息" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/ck_pmenu_update"
				android:background="@drawable/ck_menu_item_bg"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:src="@drawable/ck_menu_refresh" />
				<TextView android:textColor="@color/ck_black"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="更新版本" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/ck_pmenu_password"
				android:background="@drawable/ck_menu_item_bg"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ck_menu_about" />
				<TextView android:textColor="@color/ck_black"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="修改密码" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/ck_pmenu_exit"
				android:background="@drawable/ck_menu_item_bg"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ck_menu_quit" />
				<TextView android:textColor="@color/ck_black"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="退出" />
			</LinearLayout>
		</TableRow>
	</TableLayout>
	<ImageView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:src="@drawable/ck_menu_top"
		android:layout_alignTop="@id/ck_ptop_menu_tablayout" />
</RelativeLayout>

