    <TextView
        android:id="@+id/group_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textColor="@color/ck_black"
        android:paddingLeft="5dip" />

</LinearLayout>