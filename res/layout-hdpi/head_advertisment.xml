<?xml version="1.0" encoding="utf-8"?>
<org.lance.temp.HeadGallery
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/head_advert_grally" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	>
	<org.lance.widget.SingleGallery
		android:id="@+id/head_mygallery" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		/>
	<RelativeLayout 
		android:layout_gravity="bottom"
		android:id="@+id/top_bottom_space" 
		android:background="@drawable/top_text_background"
		android:paddingLeft="7dip" android:paddingTop="3dip"
		android:paddingRight="7dip" android:paddingBottom="3dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:textSize="10sp" android:gravity="center"
			android:id="@+id/head_text_tag" android:paddingLeft="8dip"
			android:paddingTop="4dip" android:paddingRight="8dip"
			android:paddingBottom="2dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:singleLine="true"
			android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
		<TextView android:textSize="15dip" android:textColor="@color/ck_red"
			android:gravity="left|center" android:id="@+id/head_text_title"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:singleLine="true" 
			android:layout_toRightOf="@id/head_text_tag"
			android:layout_centerVertical="true" />
	<org.lance.widget.Indicator
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="6dip"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
		android:id="@+id/head_indicator"
	    />
	</RelativeLayout>
</org.lance.temp.HeadGallery>
