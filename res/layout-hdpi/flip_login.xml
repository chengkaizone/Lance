<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff7f7f7" >

    <RelativeLayout android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:background="#ff222222">
        <ImageView 
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content" 
             android:layout_height="wrap_content" 
                android:src="@drawable/icon_back_mini_white"
            />
            <TextView android:textSize="22dp" 
                android:textColor="#ffffffff" 
                android:layout_gravity="center" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_centerInParent="true"
                android:text="Flipboard" 
                style="@style/textShadowBlack" />
        <Button android:layout_gravity="right|center" 
            android:id="@+id/login_button" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="12dp" 
            android:text="登录" 
            android:layout_alignParentRight="true"
            style="@style/FLPaperButtonDarkDone" />
    </RelativeLayout>

    <EditText
        android:id="@+id/login_username"
        style="@style/FLInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="76dp"
        android:hint="用户名"
        android:inputType="textNoSuggestions"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:singleLine="true"
        android:textColorHint="#ffcccccc"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/login_password"
        style="@style/FLInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_username"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:singleLine="true"
        android:textColorHint="#ffcccccc"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/login_help_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#ff111111"
        android:text="登录Flipboard账号查看
所收藏的内容和社交网络
需要帮助？"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textSize="17dp" />

</RelativeLayout>