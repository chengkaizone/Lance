	</style>
	<!-- 自定义风格 无主题的子属性 在注册文件中使用  定义进入和退出的动画-->
	<style name="NullCustomTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/NullCustomTheme</item>
        <item name="android:activityOpenEnterAnimation">@anim/lightbox_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/lightbox_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/stack_pop_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>
    <!-- 自定义风格 无主题的子属性 在注册文件中使用  定义进入和退出的动画-->
	<style name="CustomTheme" parent="@android:style/Theme.NoTitleBar">
	    <item name="android:windowAnimationStyle">@style/CustomTheme</item>
        <item name="android:activityOpenEnterAnimation">@anim/lightbox_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/lightbox_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/stack_pop_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>
</resources>
